# Required: The Odds API
# Sign up at https://the-odds-api.com/ to get your API key
ODDS_API_KEY=your_odds_api_key_here

# Optional: Stats APIs for enhanced player data
# NBA Stats - Sign up at https://www.balldontlie.io/
BALLDONTLIE_API_KEY=your_balldontlie_key_here

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# App Configuration
NEXT_PUBLIC_REFRESH_INTERVAL=60000

# Optional: Enable/Disable Features
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DEEP_LINKS=true

# Development Mode
# Set to 'true' to use mock data, 'false' to use live API
NEXT_PUBLIC_USE_MOCK_DATA=false
